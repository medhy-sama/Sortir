{% extends 'base.html.twig' %}

{% block body %}
    {% if app.user %}
        <div id="conteneur">

            <article>
                <p>Votre photo de profil : </p>
                <img src="{{ asset('uploads/users/' ~app.user.photo ) }}" alt="User-Photo_profil">
                <p>Votre pseudo : </p>
                <p>{{ app.user.username }}</p>
                <p>Votre nom : </p>
                <p>{{ app.user.nom }}</p>
                <p>Votre prenom : </p>
                <p>{{ app.user.prenom }}</p>
                <p>Votre numéro de téléphone : </p>
                <p>{{ app.user.telephone }}</p>
                <p>Votre email : </p>
                <p>{{ app.user.mail }}</p>
                <a href="{{ path('_modifier', {'id': app.user.id}) }}">
                    <button>Modifier</button>
                </a>
            </article>


        </div>
    {% endif %}
{% endblock %}

{% block title %}

{% endblock %}

